<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="losertron4000.MainPage">

    <Grid x:Name="centralGrid" RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image x:Name="dokiPreview" Grid.Row="0"
               Source="sample.png"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />



        <ScrollView Grid.Row="1"                         
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
            <Grid x:Name="itemGrid"  RowSpacing="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--<Label x:Name="gogo" Grid.Row="0" Grid.Column="0" Text="Item (0,0)" />
                <Image x:Name="testimg1" Grid.Row="0" Grid.Column="1" Source="sample.png" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                <Image x:Name="testimg2" Grid.Row="0" Grid.Column="2" Source="sample.png" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

                <Label Grid.Row="1" Grid.Column="0" Text="Item (1,0)" />
                <Label Grid.Row="1" Grid.Column="1" Text="Item (1,1)" />
                <Label Grid.Row="1" Grid.Column="2" Text="Item (1,2)" />-->
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
